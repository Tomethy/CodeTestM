@page
@model IndexModel
@{
    ViewData["Title"] = "Promotion Engine";
}

<div class="text-center">
    <form method="POST">

        <div>
            <div>
                <p style="font-size: 2rem;">
                    Please choose your products:
                </p>

                <p style="font-size:20px;">Unit A - 50</p>
                <input class="textBoxSize" id="txtUnitA" type="number" asp-for="units.UnitA" onfocusout="onClickOut();" />
                <br />
                <p style="font-size:20px;">Unit B - 30</p>
                <input class="textBoxSize" id="txtLastName" type="number" asp-for="units.UnitB" />
                <br />
                <p style="font-size:20px;">Unit C - 20</p>
                <input class="textBoxSize" id="txtNoOfGuests" type="number" asp-for="units.UnitC" />
                <br />
                <p style="font-size:20px;">Unit D - 15</p>
                <input class="textBoxSize" id="txtUnitD" type="number" asp-for="units.UnitD" />
                <br />

                <p style="font-size: 2rem;">
                    Total Price:
                </p>
                <input class="textBoxSize" type="text" id="totalPrice" />

                <input class="textBoxSize" id="butCalculate" type="submit" value="Calculate Price" />


                @* If I get time, I will attempt to implement the stripe payment system. *@
